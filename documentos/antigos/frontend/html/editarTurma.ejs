<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head') %>
    <title>Athena ◆ Editar Turma</title>
    <link rel="stylesheet" href="../css/cadastrarTurma.css">
</head>
<body>
    <%- include('partials/cabecalho') %>
    <main>
        <h1 class="titulo">Editar Turma</h1>
        <%- include('partials/libras') %>
        <form class="form_turma" action="" method="POST" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="idTurma" value="<%= turma.id_turma %>">
        <fieldset class="form_input">
            <input type="text" id="nome-turma" name="nomeTurma" value="<%= turma.nome %>" required="">
            <label for="nome-turma">
                <span style="transition-delay:0ms">N</span><span style="transition-delay:50ms">o</span><span
                    style="transition-delay:100ms">m</span><span style="transition-delay:150ms">e</span><span
                    style="transition-delay:200ms">&nbsp;</span><span style="transition-delay:250ms">d</span><span
                    style="transition-delay:300ms">a</span><span style="transition-delay:350ms">&nbsp;</span><span
                    style="transition-delay:400ms">T</span><span style="transition-delay:450ms">u</span><span
                    style="transition-delay:500ms">r</span><span style="transition-delay:550ms">m</span><span
                    style="transition-delay:600ms">a</span>
            </label>
        </fieldset>

        <fieldset class="form_materia">
            <label for="materia" class="titulo_selecao_da_materia">Disciplina</label>
            <select id="materia" class="selecao_de_materia" name="disciplina" required>
                <option value="<%= turma.idDisciplina %>" selected hidden><%= turma.disciplina %></option>
                <% for (let disciplina of disciplinas) { %>
                    <option value=<%= disciplina.id_disciplina %>><%= disciplina.nome %></option>
                <% } %>
            </select>
        </fieldset>

        <fieldset class="form_materia">
            <label for="serie" class="titulo_selecao_da_materia">Série</label>
            <select id="serie" class="selecao_de_materia" name="serieTurma" required>
                <option value="<%= turma.serie %>" selected hidden><%= turma.serie %>º ano</option>
                <option value="6">6º ano</option>
                <option value="7">7º ano</option>
                <option value="8">8º ano</option>
                <option value="9">9º ano</option>
            </select>
        </fieldset>

        <h2 class="vincular_alunos">Vincular Alunos</h2>

        <!-- <input class="buscar_por_nome" type="text" placeholder="Buscar por nome..."> 
        <div class="filtrar_serie">
            <select name="série" id="serie">
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
            </select>
            <button>Filtrar</button>
        </div>

        <button class="botao_primario">Vincular todos</button> -->
        <% for(let aluno of alunos){ %>
        <div class="aluno">
            <div class="aluno_perfil">
                <img class="aluno_imagem" src="../assets/icone_aluno_perfil.png" alt="Ícone de aluno">
                <p><%= aluno.nome %></p>
            </div>
            <% if(aluno.checked){ %>
                <input class="aluno_checkbox" type="checkbox" name="alunos" value="<%= aluno.id_aluno %>" checked>
            <% } else { %>
                <input class="aluno_checkbox" type="checkbox" name="alunos" value="<%= aluno.id_aluno %>">
            <% } %>
        </div>
        <% } %>
        <button tupe="submit" class="botao_primario ultimo_elemento">Atualizar</button>
        </form>
    </main>
</body>
</html>